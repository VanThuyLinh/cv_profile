<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="crossorigin" />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;700;800&amp;display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;700;800&amp;display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;700;800&amp;display=swap"
      />
    </noscript>
    <link href="/css/font-awesome/css/all.min.css?ver=1.2.0" rel="stylesheet" />
    <link href="/css/bootstrap-icons/bootstrap-icons.css?ver=1.2.0" rel="stylesheet" />
    <link href="/css/bootstrap.min.css?ver=1.2.0" rel="stylesheet" />
    <link href="/css/aos.css?ver=1.2.0" rel="stylesheet" />
    <link href="/css/main.css?ver=1.2.0" rel="stylesheet" />
    <noscript>
      <style type="text/css">
        [data-aos] {
          opacity: 1 !important;
          transform: translate(0) scale(1) !important;
        }
      </style>
    </noscript>
  </head>
  <body id="top">
    <!-- ======= HEADER ======= -->
    <% if(page === '/experiences'){ %> <%- include('../layouts/header.ejs') %> <% } else { %> <% }
    %>

    <!-- ======= EXPERIENCE ======= -->
    <div class="section px-3 px-lg-4 pt-5" id="experience">
      <div class="container-narrow">
        <div class="text-center mb-5">
          <h2 class="marker marker-center">Experience</h2>
        </div>
        <div class="row">
          <% experiences.forEach( function( experience, index ) { %>
          <div class="col-md-6">
            <div
              class="card mb-3"
              data-aos="<%- index + 1 === 1 ? 'fade-right' :  index + 1 === 2 ? 'fade-left' :  index + 1 === 3 ? 'fade-right' : 'fade-left'%>"
              data-aos-delay="<%- index + 1 === 1 ? 100 :  index + 1 === 2 ? 300 :  index + 1 === 3 ? 200 : 400%>"
            >
              <div class="card-header px-3 py-2">
                <div class="d-flex justify-content-between">
                  <div>
                    <h3 class="h5 mb-1"><%= experience.name %></h3>
                    <div class="text-muted text-small">
                      <%= experience.company %>
                      <small>(<%= experience.startDate %>-<%= experience.endDate %>)</small>
                    </div>
                  </div>
                  <img
                    src="<%= experience.imageURL %>"
                    width="48"
                    height="48"
                    alt="<%= experience.name %>"
                  />
                </div>
              </div>
              <div class="card-body px-3 py-2">
                <p><%= experience.desc %></p>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <!-- ======= FOOTER ======= -->
    <% if(page === '/experiences'){ %> <%- include('../layouts/footer.ejs') %> <% } else { %> <% }
    %>

    <div id="scrolltop">
      <a class="btn btn-secondary" href="#top"
        ><span class="icon"><i class="fas fa-angle-up fa-x"></i></span
      ></a>
    </div>
    <script src="/scripts/imagesloaded.pkgd.min.js?ver=1.2.0"></script>
    <script src="/scripts/masonry.pkgd.min.js?ver=1.2.0"></script>
    <script src="/scripts/BigPicture.min.js?ver=1.2.0"></script>
    <script src="/scripts/purecounter.min.js?ver=1.2.0"></script>
    <script src="/scripts/bootstrap.bundle.min.js?ver=1.2.0"></script>
    <script src="/scripts/aos.min.js?ver=1.2.0"></script>
    <script src="/scripts/main.js?ver=1.2.0"></script>
  </body>
</html>
